# Authentication Configuration
# JWT Secret - Generate a secure random secret (recommended: openssl rand -hex 64)
JWT_SECRET=change_this_to_a_secure_random_secret_at_least_64_characters_long

# JWT Token expiration time (examples: 24h, 7d, 30d)
JWT_EXPIRY=24h

# Default admin credentials (only used if no users exist in the system)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=changeThisPassword123

# Channel Selection Permissions
# If true, only admins can select/switch channels (default: false)
CHANNEL_SELECTION_REQUIRES_ADMIN=false

# Legacy variables (no longer used, kept for reference)
# ADMIN_ENABLED - Authentication is now always required
# ADMIN_PASSWORD - Use DEFAULT_ADMIN_PASSWORD instead
